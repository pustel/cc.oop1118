package zahlenraten;
import java.util.Scanner;
import java.util.Random;
public class zahlenraten0 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Random rnd = new Random();
		int secret = rnd.nextInt(100)+1;
		do {
			Scanner kbd = new Scanner(System.in);
			for (int i= 30; i >=0;i--) System.out.println();
			System.out.println("Ich habe eine Zufallszahl zwischen 1 und 100 gebildet");
			System.out.println();
			System.out.print("Bitte gib deinen ersten Tip ein: ");
			int guess = kbd.nextInt();
			if(secret < guess) System.out.println("Du hast ein wenig zu hoch geraten");
			else if (secret > guess) System.out.println("Du hast ein wenig zu tief geraten");
			}while(secret == guess);
		System.out.println();
		System.out.println("We have a Winner! :Fanfares:");
		}
	}

}
