
public class Zankstelle {

	public Zankstelle() {
	int kraftStoffvorrat;//liter
	double literPreis = 1.5;
	double gesamtPreis = 0.0;
	double tankBedarf = 0.0;
	
	 void vollTanken(double bedarf){
		 this.tankBedarf = bedarf;
	}
		gesamtPreis = bedarf * literPreis;
		return gesamtPreis;		
	 }
	
	}

}
